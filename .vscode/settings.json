{
    //terminal settings
    "terminal.integrated.shell.windows": "C:\\Program Files\\Git\\bin\\bash.exe",
    "terminal.integrated.rightClickBehavior": "copyPaste",
    "terminal.integrated.cursorBlinking": true,
    "terminal.integrated.fontFamily": "monospace",
    "terminal.integrated.fontWeight": "bold",
    "terminal.integrated.fontSize": 15,
    "terminal.integrated.fontWeightBold": "normal",
    "workbench.colorCustomizations": {
      "terminal.background": "#282C34",
      "terminal.foreground": "#ABB2BF",
      "terminalCursor.background": "#ABB2BF",
      "terminalCursor.foreground": "#ABB2BF",
      "terminal.ansiBlack": "#282C34",
      "terminal.ansiBlue": "#71DFD0",
      "terminal.ansiBrightBlack": "#545862",
      "terminal.ansiBrightBlue": "#61AFEF",
      "terminal.ansiBrightCyan": "#56B6C2",
      "terminal.ansiBrightGreen": "#98C379",
      "terminal.ansiBrightMagenta": "#C678DD",
      "terminal.ansiBrightRed": "#E06C75",
      "terminal.ansiBrightWhite": "#C8CCD4",
      "terminal.ansiBrightYellow": "#E5C07B",
      "terminal.ansiCyan": "#56B6C2",
      "terminal.ansiGreen": "#D2FFB3",
      "terminal.ansiMagenta": "#C678DD",
      "terminal.ansiRed": "#E06C75",
      "terminal.ansiWhite": "#ABB2BF",
      "terminal.ansiYellow": "#8170DF"
    },
    //theme icon
    "workbench.iconTheme": "material-icon-theme",
    "workbench.sideBar.location": "left",
    //bracket pair colorizer settings
    "bracket-pair-colorizer-2.colors": ["#EFF8FF", "#FF6F3C", "#FFC93C", "#F25D9C", "#6EF3D6"],
    "bracket-pair-colorizer-2.highlightActiveScope": true,
    "bracket-pair-colorizer-2.activeScopeCSS": [
      "borderStyle : solid",
      "borderWidth : 2px",
      "borderColor : {color}",
      "opacity: 0.5"
    ],
    "bracket-pair-colorizer-2.showBracketsInGutter": true,
    "bracket-pair-colorizer-2.showBracketsInRuler": true,
    "bracket-pair-colorizer-2.colorMode": "Consecutive",
    "bracket-pair-colorizer-2.forceUniqueOpeningColor": true,
    "bracket-pair-colorizer-2.scopeLineRelativePosition": true,
    "bracket-pair-colorizer-2.scopeLineCSS": [
      "borderStyle : solid",
      "borderWidth : 2px",
      "borderColor : {color}",
      "opacity: 0.5"
    ],
    //editor settings
    "editor.suggestSelection": "first",
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.minimap.enabled": false,
    // "[html]": {
    //   "editor.defaultFormatter": "vscode.html-language-features"
    // },
    "editor.fontFamily": "FiraCode",
    "editor.fontLigatures": true,
    "editor.fontSize": 15,
    "editor.suggest.showStatusBar": true,
    "editor.autoIndent": "full",
    "editor.codeLens": false,
    "editor.cursorBlinking": "solid",
    "editor.cursorSmoothCaretAnimation": true,
    "editor.cursorStyle": "line",
    "editor.formatOnPaste": true,
    "editor.formatOnType": false,
    "editor.letterSpacing": 0.5,
    "editor.lineHeight": 25,
    "editor.tabCompletion": "on",
    "editor.tabSize": 2,
    "editor.wordWrap": "on",
    "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
    "css.remoteStyleSheets": ["https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css"],
    //prettier config
    "prettier.arrowParens": "avoid",
    "prettier.singleQuote": true,
    "prettier.trailingComma": "es5",
    "prettier.printWidth": 120,
    "prettier.bracketSpacing": true,
    "emmet.showSuggestionsAsSnippets": true,
    "python.insidersChannel": "weekly",
    "git.autofetch": true,
    "liquid.format": true,
    //file settings
    "files.exclude": {
      "**/node_modules": true
    },
    "files.autoSave": "off",
    "files.autoSaveDelay": 3000,
    "files.hotExit": "onExit",
    "files.defaultLanguage": "",
    "files.trimTrailingWhitespace": true,
    "files.associations": {
      "*.ts": "typescript",
      "*.liquid": "liquid"
    },
    "liveServer.settings.donotShowInfoMsg": true,
    "window.zoomLevel": 0,
    "workbench.preferredDarkColorTheme": "One Dark Pro",
    "workbench.colorTheme": "One Dark Pro",
    "oneDarkPro.editorTheme": "One Dark Pro Darker",
    "oneDarkPro.vivid": true,
    "oneDarkPro.bold": true,
    "[javascript]": {
      "editor.defaultFormatter": "vscode.typescript-language-features"
    },
    "workbench.editor.enablePreview": true,
    "autoimport.doubleQuotes": true,
    "better-comments.highlightPlainText": true,
    "vsintellicode.features.python.deepLearning": "enabled",
    "diffEditor.renderSideBySide": false,
    "gitlens.views.branches.branches.layout": "list"
  }